{
  "name": "calaveritas-generator",
  "version": "1.0.0",
  "description": "Generador de calaveritas personalizadas del Día de Muertos",
  "main": "src/main.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "mcp-demo": "node scripts/mcp-demo.js",
    "hooks-demo": "node scripts/demo-hooks.js",
    "demo-mcp-validation": "node scripts/demo-mcp-validation.js",
    "demo-steering-rules": "node scripts/demo-steering-rules.js",
    "demo-agent-hooks": "node scripts/demo-agent-hooks.js",
    "demo-kiro-stack": "node scripts/demo-kiro-stack-complete.js",
    "deploy": "node scripts/deploy-automation.js deploy",
    "deploy:staging": "node scripts/deploy-automation.js deploy staging",
    "deploy:production": "node scripts/deploy-automation.js deploy production",
    "rollback": "node scripts/deploy-automation.js rollback",
    "deploy:status": "node scripts/deploy-automation.js status",
    "monitor:start": "node scripts/monitoring-system.js start",
    "monitor:stop": "node scripts/monitoring-system.js stop",
    "monitor:status": "node scripts/monitoring-system.js status",
    "monitor:health": "node scripts/monitoring-system.js health",
    "ci:pipeline": "node .kiro/hooks/ci-cd-pipeline.js",
    "ci:test": "node .kiro/hooks/auto-test.js",
    "ci:docs": "node .kiro/hooks/auto-docs.js",
    "ci:predeploy": "node .kiro/hooks/pre-deploy.js"
  },
  "keywords": ["calaveritas", "día de muertos", "generador", "poesía"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  }
